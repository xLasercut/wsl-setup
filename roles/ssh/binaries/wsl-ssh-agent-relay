RELAY_BIN="${HOME}/.local/bin/npiperelay.exe"

if [[ ! -f $SSH_AUTH_SOCK ]]; then
  mkdir -p "${HOME}/.ssh"
  chmod 700 "${HOME}/.ssh"
fi

ss -a | grep -q $SSH_AUTH_SOCK

if [ $? -ne 0 ]; then
    rm -f $SSH_AUTH_SOCK
    (setsid socat UNIX-LISTEN:$SSH_AUTH_SOCK,fork EXEC:"$RELAY_BIN -ei -s //./pipe/openssh-ssh-agent",nofork &) >/dev/null 2>&1
fi
